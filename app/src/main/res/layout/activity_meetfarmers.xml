<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="44dp"
    tools:context=".meetfarmers">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/headerLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/main">

            <com.google.android.material.appbar.AppBarLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/main"
                    android:title="Header Title"
                    app:menu="@menu/appbar"
                    app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

                    <ImageView
                        android:id="@+id/logoImage"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/logo" />

                    <TextView
                        android:id="@+id/titleText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="20dp"
                        android:text="Apna Kisan Apna Bazar"
                        android:textColor="@color/white"
                        android:textStyle="bold" />
                </androidx.appcompat.widget.Toolbar>
            </com.google.android.material.appbar.AppBarLayout>
        </RelativeLayout>

        <TextView
            android:id="@+id/meetFarmersText"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_below="@id/headerLayout"
            android:background="#E3E4E3"
            android:text="Meet Our Farmers"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="35dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/farmerImage"
            android:layout_width="169dp"
            android:layout_height="151dp"
            android:layout_below="@id/meetFarmersText"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="27dp"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/farmer3" />

        <TextView
            android:id="@+id/farmerName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/farmerImage"
            android:layout_centerHorizontal="true"
            android:text="Mr. Mohan Lal"
            android:layout_marginTop="20dp"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/farmerBio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/farmerName"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="Hi! I am Mohan Lal.....[BIO]"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/productListTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/farmerBio"
            android:layout_marginTop="25dp"
            android:text="Product List:"
            android:textSize="25dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/product1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/productListTitle"
            android:layout_marginTop="10dp"
            android:text="Product 1"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/product2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/product1"
            android:layout_marginTop="10dp"
            android:text="Product 2"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/product3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/product2"
            android:layout_marginTop="10dp"
            android:text="Product 3"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/product4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/product3"
            android:layout_marginTop="10dp"
            android:text="Product 4"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/bidListTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/product4"
            android:layout_marginTop="25dp"
            android:text="Bid List:"
            android:textSize="25dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/highestBid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/bidListTitle"
            android:layout_marginTop="10dp"
            android:text="Highest Bid I Get"
            android:textColor="@color/black"
            android:textSize="18sp" />
        <TextView
            android:id="@+id/moderatebid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/highestBid"
            android:layout_marginTop="10dp"
            android:text="Moderate Bid I Get"
            android:textColor="@color/black"
            android:textSize="18sp" />
        <TextView
            android:id="@+id/leastbid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/moderatebid"
            android:layout_marginTop="10dp"
            android:text="Lowest Bid I Get"
            android:textColor="@color/black"
            android:textSize="18sp" />
    </RelativeLayout>
</ScrollView>
