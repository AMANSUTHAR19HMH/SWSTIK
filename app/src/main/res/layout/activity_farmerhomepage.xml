<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:fillViewport="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="1dp">

        <!-- AppBar Layout -->
        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/app_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/main"
                android:title="Header Title">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/logo" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="20dp"
                    android:text="Apna Kisan Apna Bazar"
                    android:textColor="@color/white"
                    android:textStyle="bold" />
            </androidx.appcompat.widget.Toolbar>
        </com.google.android.material.appbar.AppBarLayout>

        <!-- Profile Section -->
        <LinearLayout
            android:id="@+id/linear_layoutprofile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/app_bar"
            android:background="@color/background"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="20dp">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/profile" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="Hello, "
                android:textSize="17sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/agritext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Farmer's Name"
                android:textSize="17sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Buttons Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/linear_layoutprofile"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/buttonproduct"
                    android:layout_width="147dp"
                    android:layout_height="115dp"
                    android:layout_margin="10dp"
                    android:backgroundTint="@color/main"
                    android:text="Product List"
                    android:textColor="@color/white"
                    android:textSize="16.97sp" />

                <Button
                    android:id="@+id/buttonbid"
                    android:layout_width="147dp"
                    android:layout_height="115dp"
                    android:layout_margin="10dp"
                    android:backgroundTint="@color/main"
                    android:text="Bid List"
                    android:textColor="@color/white"
                    android:textSize="17sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/buttonassistance"
                    android:layout_width="147dp"
                    android:layout_height="115dp"
                    android:layout_margin="10dp"
                    android:backgroundTint="@color/main"
                    android:text="Assistance Loan"
                    android:textColor="@color/white"
                    android:textSize="17sp" />

                <Button
                    android:id="@+id/buttonweather"
                    android:layout_width="147dp"
                    android:layout_height="115dp"
                    android:layout_margin="10dp"
                    android:backgroundTint="@color/main"
                    android:text="Weather Prediction"
                    android:textColor="@color/white"
                    android:textSize="17sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/buttonmarket"
                    android:layout_width="147dp"
                    android:layout_height="115dp"
                    android:layout_margin="10dp"
                    android:backgroundTint="@color/main"
                    android:text="Market Price"
                    android:textColor="@color/white"
                    android:textSize="17sp" />

                <Button
                    android:id="@+id/buttoncommunity"
                    android:layout_width="147dp"
                    android:layout_height="115dp"
                    android:layout_margin="10dp"
                    android:backgroundTint="@color/main"
                    android:text="Community"
                    android:textColor="@color/white"
                    android:textSize="17sp" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</ScrollView>
