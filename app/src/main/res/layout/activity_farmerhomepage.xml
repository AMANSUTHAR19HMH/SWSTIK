<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".farmerhomepage">

    <!-- AppBar Layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/main"
        tools:ignore="MissingConstraints">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/main"
                android:title="Header Title"
                app:menu="@menu/appbar"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/logo" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="20dp"
                    android:text="Apna Kisan Apna Bazar"
                    android:textColor="@color/white"
                    android:textStyle="bold" />
            </androidx.appcompat.widget.Toolbar>
        </com.google.android.material.appbar.AppBarLayout>
    </RelativeLayout>

    <!-- Profile Section -->
    <LinearLayout
        android:id="@+id/linear_layoutprofile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background"
        android:gravity="center_vertical"
        android:padding="20dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="94dp"
        tools:ignore="MissingConstraints">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/profile" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="Hello,  "
            android:textSize="17sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/agritext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Farmer's Name"
            android:textSize="17sp"
            android:textStyle="bold"/>
    </LinearLayout>

    <!-- Buttons -->
    <Button
        android:id="@+id/button12"
        android:layout_width="137dp"
        android:layout_height="115dp"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:text="Product List"
        android:textColor="@color/white"
        android:backgroundTint="@color/main"
        android:textSize="17sp"
        tools:layout_editor_absoluteX="39dp"
        tools:layout_editor_absoluteY="226dp"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/button13"
        android:layout_width="137dp"
        android:layout_height="115dp"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:backgroundTint="@color/main"
        android:text="Bid List"
        android:textColor="@color/white"
        android:textSize="17sp"
        tools:layout_editor_absoluteX="235dp"
        tools:layout_editor_absoluteY="226dp"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/button14"
        android:layout_width="137dp"
        android:layout_height="115dp"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:backgroundTint="@color/main"
        android:text="Assistance Loan"
        android:textColor="@color/white"
        android:textSize="17sp"
        tools:layout_editor_absoluteX="40dp"
        tools:layout_editor_absoluteY="380dp"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/button15"
        android:layout_width="137dp"
        android:layout_height="115dp"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:backgroundTint="@color/main"
        app:circularflow_radiusInDP="1"
        android:text="Weather Prediction"
        android:textColor="@color/white"
        android:textSize="17sp"
        tools:layout_editor_absoluteX="235dp"
        tools:layout_editor_absoluteY="380dp"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/button16"
        android:layout_width="137dp"
        android:layout_height="115dp"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:backgroundTint="@color/main"
        android:text="Market Price"
        android:textColor="@color/white"
        android:textSize="17sp"
        tools:layout_editor_absoluteX="39dp"
        tools:layout_editor_absoluteY="545dp"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/button17"
        android:layout_width="137dp"
        android:layout_height="115dp"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:backgroundTint="@color/main"
        android:text="Community"
        android:textColor="@color/white"
        android:textSize="17sp"
        tools:layout_editor_absoluteX="235dp"
        tools:layout_editor_absoluteY="545dp"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>
